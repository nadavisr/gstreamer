    "version": "0.2.0",
    "configurations": [
        //two windows test
        {
            "name": "window1",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run_pipeline.py",
            "console": "internalConsole",
            "args": ["-p", "videotestsrc ! video/x-raw, framerate=30/1, width=640, height=480 ! timeoverlay font-desc=\"Times 60\" ! autovideosink"]            
        },
        {
            "name": "window2",          
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run_pipeline.py",
            "console": "internalConsole",
            "args": ["-p", "videotestsrc ! video/x-raw, framerate=30/1, width=320, height=240 ! timeoverlay font-desc=\"Times 60\" ! autovideosink"]            
        },

        //simple rtp sender/receiver test
        {
            "name": "simple_sender",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run_pipeline.py",
            "console": "internalConsole",
            "args": ["-p", "videotestsrc ! video/x-raw, width=320, height=240, framerate=30/1, format=I420, depth=8 ! timeoverlay font-desc=\"Times 60\" time-mode=running-time ! rtpvrawpay pt=96 ! udpsink host=127.0.0.1 port=5000"]            
        },
        {
            "name": "simple_receiver",          
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run_pipeline.py",
            "console": "internalConsole",
            "args": ["-p", "udpsrc buffer-size=622080 port=5000 caps=\"application/x-rtp, media=(string)video, clock-rate=(int)90000, encoding-name=(string)RAW, sampling=YCbCr-4:2:0,depth=(string)8,width=(string)320, height=(string)240,colorimetry=(string)BT601-5, payload=(int)96, framerate=(fraction)30/1 \" ! rtpvrawdepay ! autovideosink sync=true"]            
        },

         //rtp with telemetry test single source
         {
            "name": "rtp_with_telem_sender",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run_pipeline.py",
            "console": "internalConsole",
            "args": ["-p", "rtpbin name=rtpbin videotestsrc ! video/x-raw, width=320, height=240, framerate=30/1, format=I420, depth=8 ! timeoverlay font-desc=\"Times 60\" time-mode=running-time !  tee  name=t t. ! queue ! videoconvert ! x264enc tune=zerolatency ! video/x-h264 ! rtph264pay pt=96 ! rtpbin.send_rtp_sink_0 t. ! queue ! rtpvrawpay pt=96 ! rtpbin.send_rtp_sink_1 t. ! queue ! videoconvert ! autovideosink sync=true rtpbin.send_rtp_src_0 ! udpsink host=127.0.0.1 port=50000 sync=true async=false rtpbin.send_rtcp_src_0 ! udpsink host=127.0.0.1 port=50001 sync=false async=false rtpbin.send_rtp_src_1 ! udpsink host=127.0.0.1 port=50002 sync=true async=false rtpbin.send_rtcp_src_1 ! udpsink host=127.0.0.1 port=50003 sync=false async=false"]            
        },
        {
            "name": "rtp_with_telem_receiver",          
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run_pipeline.py",
            "console": "internalConsole",
            "args": ["-p", "rtpbin name=rtpbin udpsrc address=127.0.0.1 port=50000 caps=\"application/x-rtp, media=(string)video, encoding-name=(string)H264, clock-rate=(int)90000\" !  rtpbin.recv_rtp_sink_0 udpsrc address=127.0.0.1 port=50001 caps=\"application/x-rtcp\" ! rtpbin.recv_rtcp_sink_0 udpsrc address=127.0.0.1 port=50002 caps=\"application/x-rtp, media=(string)video, clock-rate=(int)90000, encoding-name=(string)RAW, sampling=YCbCr-4:2:0,depth=(string)8,width=(string)320, height=(string)240,colorimetry=(string)BT601-5, payload=(int)96, framerate=(fraction)30/1\" ! rtpbin.recv_rtp_sink_1 udpsrc address=127.0.0.1 port=50003 caps=\"application/x-rtcp\" ! rtpbin.recv_rtcp_sink_1 rtpbin. ! rtph264depay ! queue ! avdec_h264 ! autovideosink sync=true rtpbin. ! rtpvrawdepay ! queue ! autovideosink sync=true"]            
        },

         //rtp with telemetry test multiple sources
         {
            "name": "rtp_with_telem_multi_source_sender",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run_pipeline.py",
            "console": "internalConsole",
            "args": ["-p", "rtpbin name=rtpbin videotestsrc do-timestamp=true ! video/x-raw, width=640, height=480, framerate=30/1, format=I420, depth=8 ! timeoverlay font-desc=\"Times 60\" time-mode=running-time ! tee name=t t. ! queue ! videoconvert ! x264enc tune=zerolatency ! video/x-h264 ! rtph264pay pt=96 ! rtpbin.send_rtp_sink_0 t. ! queue !  videoconvert ! autovideosink rtpbin.send_rtp_src_0 ! udpsink host=127.0.0.1 port=50000 sync=true async=false rtpbin.send_rtcp_src_0 ! udpsink host=127.0.0.1 port=50001 sync=false async=false videotestsrc do-timestamp=true pattern=white ! video/x-raw, width=320, height=120, framerate=30/1, format=I420, depth=8 ! timeoverlay font-desc=\"Times 60\" time-mode=running-time ! queue ! rtpvrawpay pt=96 ! rtpbin.send_rtp_sink_1 rtpbin.send_rtp_src_1 ! udpsink host=127.0.0.1 port=50002 sync=true async=false rtpbin.send_rtcp_src_1 ! udpsink host=127.0.0.1 port=50003 sync=false async=false"]            
        },
        {
            "name": "rtp_with_telem_multi_source_receiver",          
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run_pipeline.py",
            "console": "internalConsole",
            "args": ["-p", "rtpbin name=rtpbin udpsrc address=127.0.0.1 port=50000 caps=\"application/x-rtp, media=(string)video, encoding-name=(string)H264, clock-rate=(int)90000\" ! rtpbin.recv_rtp_sink_0 udpsrc address=127.0.0.1 port=50001 caps=\"application/x-rtcp\" ! rtpbin.recv_rtcp_sink_0 udpsrc address=127.0.0.1 port=50002 caps=\"application/x-rtp, media=(string)video, clock-rate=(int)90000, encoding-name=(string)RAW, sampling=YCbCr-4:2:0,depth=(string)8,width=(string)320, height=(string)120,colorimetry=(string)BT601-5, payload=(int)96, framerate=(fraction)30/1\" ! rtpbin.recv_rtp_sink_1 udpsrc address=127.0.0.1 port=50003 caps=\"application/x-rtcp\" ! rtpbin.recv_rtcp_sink_1 rtpbin. ! rtph264depay ! queue ! avdec_h264 ! autovideosink sync=true rtpbin. ! rtpvrawdepay ! queue ! autovideosink sync=true"]            
        }
    ],
    "compounds": [
        {
            "name": "window1/window2",
            "configurations": ["window1","window2"]            
        },
        {
            "name": "rtp simple",
            "configurations": ["simple_receiver","simple_sender"] 
        },
        {
            "name": "rtp with telem single source",
            "configurations": ["rtp_with_telem_receiver","rtp_with_telem_sender"] 
        },
        {
            "name": "rtp with telem multi source",
            "configurations": ["rtp_with_telem_multi_source_receiver","rtp_with_telem_multi_source_sender"] 
        }
    ]
}